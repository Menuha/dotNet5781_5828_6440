<Window x:Class="PL.AddLineTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddLineTrip" Height="250" Width="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Line Trip Start At:" HorizontalAlignment="Left" Height="30" Margin="10,49,0,0" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="tSpanTextBox" Width="98" VerticalAlignment="Center" Text="{Binding StartAt, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="119,52,0,144" Height="23" HorizontalAlignment="Left" RenderTransformOrigin="0.492,0.456"/>
        <Label Content="hh:mm:ss" HorizontalAlignment="Left" Margin="134,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.4,1.676"/>
        <Button x:Name="btAdd" Content="Add" HorizontalAlignment="Left" Margin="69,130,0,0" VerticalAlignment="Top" Width="101" Height="26" Click="btAdd_Click" />

    </Grid>
</Window>
